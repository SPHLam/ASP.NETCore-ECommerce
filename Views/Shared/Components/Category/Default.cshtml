@model IEnumerable<CategoryDTO> 

<div class="col-lg-12">
    <div class="mb-3">
        <h4>Categories</h4>
        <ul class="list-unstyled fruite-categorie">
            @foreach (var category in Model)
            {
                <div class="d-flex justify-content-between fruite-name">
                    <a asp-controller="Category" asp-action="Index" asp-route-Id="@category.MaLoai">
                        <i class="fas fa-apple-alt me-2">@category.TenLoai</i>
                    </a>
                    <span>(@category.SoLuong)</span>
                </div>
            }
        </ul>
    </div>
</div>